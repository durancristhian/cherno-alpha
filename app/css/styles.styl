/* PureCSS */
@import "../../bower_components/pure/pure-min.css"

/* Icons */
@import "../../css/icons.css"

/* Variables */
black = #242424
darkGray = #ccc
gray = #F4F3F0
green = #2ecc71
red = #E38065
white = #fff

/* Mixins */
Transition()
	transition .2s all ease

/* Styles */
body
	background gray
	color white
	font-family "Open Sans", sans-serif
	font-size 20px
	letter-spacing 2px
	line-height 20px

a
	display inline-block
	line-height 20px
	text-decoration none
	vertical-align middle

header
	background red
	border-bottom 2px solid darken(red, 50%)
	box-shadow 0 2px 5px rgba(0, 0, 0, .2)

	img
		height 50px
		margin-right .5em
		padding 25px 0

	img, h1
		color white
		display inline-block
		font-size 1.5em
		vertical-align middle

	h1
		margin 0
		padding 0
		text-shadow 1px 1px 3px rgba(0, 0, 0, .2)

.content
	color black
	margin 1em auto
	max-width 480px

	.list-item
		background white
		border-radius 4px
		box-shadow 1px 1px 5px darken(gray, 25%)
		display block
		margin 1em .5em 0

		&:hover
			cursor pointer

		.icon
			background red
			border-top-right-radius 4px
			border-bottom-right-radius 4px
			color white
			display block
			font-size 1.25em
			padding .5em
			Transition()

			&:hover
				background darken(red, 50%)

		.item-header

			span
				display inline-block
				letter-spacing 1px
				padding .75em 0 .75em .5em
				vertical-align middle

			.info
				color darkGray
				font-size .75em

	.tasks
		list-style none
		margin 2em 1em 1em
		padding 0

		.input
			background none
			border none
			border-bottom 1px dashed darkGray
			display block
			letter-spacing 2px
			margin 0
			outline none
			padding .5em
			width 100%

		.task
			margin-bottom 1em

			&:hover
				cursor: pointer

			.icon-checkbox:before
				content "\e739"

			.icon-checkbox.task-true:before
				color darkGray
				content "\e738"

			.icon-remove
				Transition()

				&:hover
					color red

			.text
				font-size .75em
				padding-left 5px

				&.task-true
					color darkGray
					text-decoration line-through

.pure-g [class *="pure-u"],.pure-g-r [class *="pure-u"]
	font-family "Open Sans", sans-serif
	font-size 20px
	letter-spacing 2px
	line-height 20px

.simple-button
	border-radius 4px
	color white
	display inline-block
	padding .5em
	vertical-align middle

	&.green
		background green

.text-center
	text-align center