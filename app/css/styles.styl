/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
	font-family 'Georgia'
	background-color background-color
	color #444
	font-size 15px

header
	font-family 'Quicksand'
	font-size 3em
	font-weight bold
	padding 50px 0
	color #fff
	text-align center

	/*
	 * Note the use of the `main-color`
	 * variable and the `darken` function
	 */
	background-color main-color
	border-bottom 1px solid darken(main-color, 30%)
	text-shadow 0px -1px 0px darken(main-color, 30%)

.container
	margin 50px auto
	overflow hidden

.main-content

	img
		display block
		margin 0 auto
		width 90%

.sidebar
	margin 0 auto 50px
	width 90%

	.widget

		/*
		 * Note the lack of vendor
		 * prefixes here. Nib will
		 * add them for us
		 */
		border-radius 3px
		border 1px solid #ccc
		background-color background-color
		box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

		h1
			font-family 'Quicksand'
			font-size 1.5em
			font-weight bold
			margin 13px 10px 4px
			padding-bottom 10px
			border-bottom 1px dotted #ddd
			border-radius 2px 2px 0px 0px
			margin-bottom 10px

		p
			padding 0px 10px
			margin-bottom 10px

p
	line-height 1.8

footer
	margin 50px auto
	border-top 1px dotted #ccc
	padding-top 5px
	width 90%