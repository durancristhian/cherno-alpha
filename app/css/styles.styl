/* AnimateCSS */
@import "../../bower_components/animate.css/animate.min.css"

/* PureCSS */
@import "../../bower_components/pure/pure-min.css"

/* Icons */
@import "../../css/icons.css"

/* Variables */
black = #666
blueLight = #77B3D4
blue = darken(blueLight, 25%)
gray = #F9F9F9
grayDark = #CCC
grayMedium = #F2F2F4
white = #fff

/* Mixins */
AlignChilds(_childsAlign, _verticalAlign)
	text-align center
	*
		display inline-block
		vertical-align _verticalAlign

Transition()
	transition .25s all ease

/* Base */
body
	background gray
	color black
	font-family: 'Arimo', sans-serif;
	font-size 20px
	letter-spacing 2px
	min-height 500px
	min-width 768px

.container
	padding .75em .5em

/* Header */
header
	background white
	border-top 3px solid blue
	border-bottom 2px solid grayDark
	padding 1em .5em
	AlignChilds(center, middle)

	.logo
		display inline-block
		font-size 1.25em
		margin 0
		Transition()
		AlignChilds(center, middle)

		&:hover
			cursor default

			.logo-text
				letter-spacing 5px

		.logo-image
			height 2em
			width 2em

		.logo-text
			padding-left .5em
			Transition()