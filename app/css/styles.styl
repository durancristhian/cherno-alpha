/* PureCSS */
@import "../../bower_components/pure/pure-min.css"

/* Icons */
@import "../../css/icons.css"

/* Variables */
black = #242424
gray = #F4F3F0
red = #E38065
white = #fff

/* Mixins */
Transition()
	transition .2s all ease

/* Styles */
body
	background gray
	color white
	font-family "Open Sans", sans-serif
	font-size 20px
	letter-spacing 2px
	text-shadow 1px 1px 2px rgba(0, 0, 0, .2)

a
	display inline-block
	text-decoration none
	vertical-align middle

header
	background red
	border-bottom 2px solid darken(red, 50%)
	box-shadow 0 2px 5px rgba(0, 0, 0, .2)

	img
		height 50px
		margin-right 1em
		padding 25px 0

	img, h1
		color white
		display inline-block
		font-size 1.5em
		vertical-align middle

	h1
		font-weight normal
		padding 0
		margin 0

.content
	color black
	margin 2em 1em

.pure-g [class *="pure-u"],.pure-g-r [class *="pure-u"]
	font-family "Open Sans", sans-serif
	font-size 20px
	letter-spacing 2px

.text-center
	text-align center